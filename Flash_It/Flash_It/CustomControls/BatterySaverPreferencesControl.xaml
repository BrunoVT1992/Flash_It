<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flash_It.CustomControls.BatterySaverPreferencesControl">
  <ContentView.Content>
    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Padding="5">
      <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
        <Label x:Name="TitleLabel" FontSize="Large" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
        <Switch x:Name="EnabledSwitch" Toggled="EnabledSwitch_Toggled" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="80" HeightRequest="40"/>
      </StackLayout>
      <Label x:Name="MinBatteryTitleLabel" FontSize="Medium"/>
      <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
        <Slider x:Name="MinBatterySlider" Maximum="99" ValueChanged="MinBatterySlider_ValueChanged" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
        <Label x:Name="SliderValueLabel" HorizontalOptions="End" VerticalOptions="CenterAndExpand"/>
      </StackLayout>
    </StackLayout>
  </ContentView.Content>
</ContentView>